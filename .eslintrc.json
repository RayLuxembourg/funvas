{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"

    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "semi":"off",
        "no-param-reassign": ["error", { "props": false }]
    }
}
